<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>listBookServlet</servlet-name>
        <servlet-class>listBookServlet</servlet-class>
    </servlet>  
    
    <servlet-mapping>
        <servlet-name>listBookServlet</servlet-name>
        <url-pattern>/listBookServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>BuyServlet</servlet-name>
        <servlet-class>BuyServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>BuyServlet</servlet-name>
        <url-pattern>/BuyServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCartBook</servlet-name>
        <servlet-class>DeleteCartBook</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteCartBook</servlet-name>
        <url-pattern>/DeleteCartBook</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>UpdateQuantity</servlet-name>
        <servlet-class>UpdateQuantity</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UpdateQuantity</servlet-name>
        <url-pattern>/UpdateQuantity</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>ClearCart</servlet-name>
        <servlet-class>ClearCart</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ClearCart</servlet-name>
        <url-pattern>/ClearCart</url-pattern>
    </servlet-mapping>
    
    
</web-app>